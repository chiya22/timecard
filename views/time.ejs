<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <div>
        <form method="POST" name="timeform" action="/time/start">
            <h2><%= user.name %></h2>
            <h3><%= user.id %></h3>
            <h3><%= ymd %></h3>
            <div>
                <p id="startbtn">出勤</p>
                <p><%= time.starttime %></p>
                <p><%= time.starttimeupd %></p>
            </div>
            <div>
                <p id="endbtn">退勤</p>
                <p><%= time.endtime %></p>
                <p><%= time.endtimeupd %></p>
            </div>
            <input type="hidden" name="ymd" value="<%= ymd %>" id="ymd">
            <input type="hidden" name="starttime" value="<%= time.starttime %>">
            <input type="hidden" name="starttimeupd" value="<%= time.starttimeupd %>">
            <input type="hidden" name="endtime" value="<%= time.endtime %>">
            <input type="hidden" name="endtimeupd" value="<%= time.endtimeupd %>">
            <input type="hidden" name="shorikubun" value="" id="shorikubun">
            <input type="hidden" name="id" value="<%= user.id %>">
        </form>
    </div>
    <script>
        let startbtn = document.getElementById("startbtn");
        let endbtn = document.getElementById("endbtn");
        startbtn.addEventListener('click', function(){
            document.getElementById("shorikubun").value = "start";
            document.timeform.submit();
        });
        endbtn.addEventListener('click', function(){
            document.getElementById("shorikubun").value = "end";
            document.timeform.submit();
        });
    </script>
</body>

</html>