<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <%- include("./common/stylesheets.ejs", {isAdmin: true}) %>
</head>

<body>
  <div class="container-top">
    <%- include("./common/header.ejs", {addAdminMenu: false}) %>
    <div class="area">
      <% if (timelist) { %>
      <table>
        <tr>
          <th>日付</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>出勤時間<br>(修正)</th>
          <th>退勤時間<br>(修正)</th>
          <th>賄</th>
          <th>朝<br>遅</th>
        </tr>
        <% timelist.forEach(function(timeinfo){ %>
        <tr>
          <td>
            <%= timeinfo.yyyymmddyoubi %>
            <input type="hidden" value="<%= timeinfo.yyyymmdd %>">
          </td>
          <td><%= timeinfo.start %></td>
          <td><%= timeinfo.end %></td>
          <td><input class="startupd" type="text" value="<%= timeinfo.startupd %>"></td>
          <td><input class="endupd" type="text" value="<%= timeinfo.endupd %>"></td>
          <td><input class="makanai" type="checkbox"></td>
          <td><input class="asaoso" type="checkbox"></td>
        </tr>
        <% }) %>
      </table>
      <% } %>
    </div>
  </div>
  <%- include("./common/back.ejs", {toAdmin: true, toMonth: true, id: userinfo.id }) %>
</body>

</html>